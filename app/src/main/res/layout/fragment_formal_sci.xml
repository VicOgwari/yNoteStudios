<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.midland.ynote.Fragments.FormalSciSubCat">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainFieldCard"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            app:cardElevation="9dp"
            app:cardBackgroundColor="#454444"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Formal Sciences"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_below="@+id/mainFieldCard"
            android:layout_marginTop="2dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <View
            android:layout_below="@+id/mainFieldCard"
            android:background="#000"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/formalCardView"
            android:layout_below="@+id/mainFieldCard"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <HorizontalScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <androidx.cardview.widget.CardView
                       android:id="@+id/compSciCard"
                       app:cardCornerRadius="10dp"
                       app:cardElevation="7dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/compSci"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="17sp"
                           android:text="Computer science"/>

                   </androidx.cardview.widget.CardView>


                   <androidx.cardview.widget.CardView
                       android:id="@+id/mathCard"
                       app:cardCornerRadius="10dp"
                       android:layout_marginStart="10dp"
                       app:cardElevation="7dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp">

                       <TextView
                           android:id="@+id/math"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="17sp"
                           android:text="Mathematics"/>

                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:id="@+id/statisticsCard"
                       app:cardCornerRadius="10dp"
                       android:layout_marginStart="10dp"
                       app:cardElevation="7dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp">

                       <TextView
                           android:id="@+id/stats"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="17sp"
                           android:text="Statistics"/>

                   </androidx.cardview.widget.CardView>



               </LinearLayout>

           </HorizontalScrollView>

        </androidx.cardview.widget.CardView>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/formalSciViewPager"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/formalCardView"/>


    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/stringBuilder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</FrameLayout>