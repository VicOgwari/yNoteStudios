<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LectureStudio2">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#493D39"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/studioToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#000"
            app:layout_collapseMode="parallax"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start">

                <Button
                    android:id="@+id/text_countDown"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="25dp"
                    android:background="#FFEB3B"
                    android:text="00:00"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/record"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/text_countDown"
                    android:background="#000"
                    android:src="@drawable/ic_baseline_videocam_24" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.cardview.widget.CardView
            android:id="@+id/cameraCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:cardBackgroundColor="#FFEA00"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:id="@+id/camRel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="2dp">

                <FrameLayout
                    android:id="@+id/cameraPreview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="#FFFFFF" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <androidx.viewpager.widget.ViewPager
            android:id="@+id/studio_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/tw__composer_black"
            android:layout_alignParentBottom="true">


            <HorizontalScrollView
                android:id="@+id/taskBar"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/illustrate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="3dp"
                        android:backgroundTint="#040404"
                        android:src="@drawable/ic_baseline_gesture_24" />

                    <ImageButton
                        android:id="@+id/switchFragments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/tw__light_gray"
                        android:src="@drawable/ic_swap_horiz" />

                    <ImageButton
                        android:id="@+id/toggleCam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/tw__light_gray"
                        android:src="@drawable/ic_control_camera" />

                    <ImageButton
                        android:id="@+id/projector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/tw__light_gray"
                        android:src="@drawable/ic_photo_library" />

                    <ImageButton
                        android:id="@+id/cameraBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/tw__light_gray"
                        android:src="@drawable/ic_menu_camera" />

                    <ImageButton
                        android:id="@+id/blinders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/tw__light_gray"
                        android:src="@drawable/ic_center" />

                    <Button
                        android:id="@+id/toggleButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/colorAccent"
                        android:text="@string/start" />

                </LinearLayout>

            </HorizontalScrollView>




        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:id="@+id/paint_sheet"
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_marginBottom="50dp"
            android:visibility="gone"
            app:behavior_hideable="true"
            app:behavior_peekHeight="52dp"
            app:cardCornerRadius="3dp"
            app:cardMaxElevation="9dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/pvLY"
                    android:layout_above="@+id/paintLY"
                    android:layout_below="@+id/utilitiesLY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.midland.ynote.Utilities.CustomHorizontalScrollView
                        android:id="@+id/paintHorizontalView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.midland.ynote.Utilities.CustomScrollView
                            android:id="@+id/paintScrollView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/tw__composer_black">

                                <com.midland.ynote.Utilities.Paint.PaintView
                                    android:id="@+id/paintView"
                                    android:layout_width="1200dp"
                                    android:layout_height="1200dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="9dp"
                                    android:layout_marginLeft="9dp"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginEnd="9dp"
                                    android:layout_marginRight="9dp"
                                    android:layout_marginBottom="9dp"
                                    android:fadeScrollbars="true"
                                    android:padding="5dp">

                                </com.midland.ynote.Utilities.Paint.PaintView>


                            </RelativeLayout>

                        </com.midland.ynote.Utilities.CustomScrollView>

                    </com.midland.ynote.Utilities.CustomHorizontalScrollView>


                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/paintLY"
                    android:background="@color/tw__composer_deep_gray"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/black"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_black" />

                        <ImageButton
                            android:id="@+id/red"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_red" />

                        <ImageButton
                            android:id="@+id/blue"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_blue" />

                        <ImageButton
                            android:id="@+id/yellow"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_yellow" />

                        <ImageButton
                            android:id="@+id/green"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_green" />

                        <ImageButton
                            android:id="@+id/purple"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_purple" />


                        <ImageButton
                            android:id="@+id/undo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/ic_baseline_undo_24" />

                        <ImageButton
                            android:id="@+id/redo"
                            android:visibility="gone"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_redo_24" />




                        <ImageButton
                            android:id="@+id/brushType"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#838383"
                            android:src="@drawable/ic_baseline_brush_24" />

                        <TextView
                            android:id="@+id/brushTypeTV"
                            android:layout_width="60dp"
                            android:layout_height="25dp"
                            android:visibility="gone"
                            android:text="Normal"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/brushSize"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_size" />

                        <TextView
                            android:id="@+id/brushSizeTV"
                            android:layout_width="50dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:visibility="gone"
                            android:text="2/30"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/eraser"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="#838383"
                            android:src="@drawable/ic_erase" />


                        <ImageButton
                            android:id="@+id/saveBitmap"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_save_24" />


                    </LinearLayout>

                </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/utilitiesLY"
                    android:gravity="center"
                    android:background="@color/tw__composer_deep_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/closePaintView"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/com_facebook_close" />

                    <ImageButton
                        android:id="@+id/scrollMode"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_lock_open" />

                    <ImageButton
                        android:id="@+id/indicator"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_red" />

                    <ImageButton
                        android:id="@+id/background"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_background" />

                </LinearLayout>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/projectorRel"
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_marginBottom="50dp"
            android:background="#FFC107"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/projectorRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="#fff" />

            <ImageButton
                android:id="@+id/closeDocView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFC107"
                android:src="@drawable/com_facebook_close" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorAccent"
                android:src="@drawable/ic_add_box_black_24dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cameraRel"
            android:layout_width="match_parent"
            android:layout_height="570dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_marginBottom="50dp"
            android:background="#3A3A3A3A"
            android:visibility="gone">

            <com.priyankvasa.android.cameraviewex.CameraView
                android:id="@+id/outSourcedCamera"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:keepScreenOn="true"
                app:aspectRatio="4:3"
                app:autoFocus="continuous_picture"
                app:awb="auto"
                app:cameraMode="single_capture"
                app:continuousFrameSize="W1440, 1080"
                app:facing="back"
                app:flash="auto"
                app:jpegQuality="high"
                app:noiseReduction="high_quality"
                app:opticalStabilization="true"
                app:outputFormat="jpeg"
                app:pinchToZoom="true"
                app:shutter="short_time"
                app:singleCaptureSize="1920, H1080"
                app:touchToFocus="false"
                app:zsl="true" />


            <ImageButton
                android:id="@+id/closeCameraView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFC107"
                android:src="@drawable/com_facebook_close" />



        </RelativeLayout>


    </RelativeLayout>


