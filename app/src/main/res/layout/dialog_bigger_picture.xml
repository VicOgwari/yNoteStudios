<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    tools:context="com.midland.ynote.Dialogs.PublishApproval">



    <androidx.cardview.widget.CardView
        android:id="@+id/lectureCardApproval"
        android:layout_marginTop="10dp"
        android:layout_width="270dp"
        android:layout_height="310dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="9dp"
        app:cardElevation="9dp">


        <RelativeLayout
            android:id="@+id/relFeedApproval"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/cardview_default_elevation">


        <ImageView
            android:id="@+id/biggerPicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



            <Button
                android:id="@+id/doc_options_approval"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:paddingStart="@dimen/cardview_default_radius"
                android:paddingLeft="@dimen/cardview_compat_inset_shadow"
                android:shadowColor="#000"
                android:text="@string/_8942"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:textSize="30sp"
                tools:ignore="RtlSymmetry" />

        </RelativeLayout>



    </androidx.cardview.widget.CardView>




    <Button
        android:id="@+id/updateBtn"
        android:visibility="gone"
        android:background="#F1C9F8"
        android:layout_below="@+id/lectureCardApproval"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Update"/>

</RelativeLayout>