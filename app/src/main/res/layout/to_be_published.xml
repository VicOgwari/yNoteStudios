<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:padding="7dp"
    android:layout_marginTop="3dp"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/lectureCardApproval"
        android:layout_marginTop="9dp"
        android:layout_width="145dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="9dp"
        app:cardElevation="9dp">



        <RelativeLayout
            android:id="@+id/relFeedApproval"
            android:background="@drawable/document_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/cardview_default_elevation">

            <ImageView
                android:id="@+id/objectCoverPhotoApproval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4" />


            <ImageView
                android:id="@+id/docEmblem"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/pdf" />


            <TextView
                android:id="@+id/docTitleApproval"
                android:layout_width="130dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:background="#74FFFFFF"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxEms="9"
                android:maxLines="4"
                android:text="Numerical Analysis of the marginal deficit of ammerican puplexities. I w"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="italic|bold"
                tools:targetApi="o" />

            <LinearLayout
                android:layout_below="@+id/docTitleApproval"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:layout_width="120dp"
                    android:layout_height="2dp"/>

                <TextView
                    android:id="@+id/publishedBy"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:gravity="center_horizontal"
                    android:maxLines="4"
                    android:maxEms="9"
                    android:text="Published by:"
                    android:textColor="#000"
                    android:textStyle="italic|bold"
                    tools:targetApi="o" />

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/publishedByApproval"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:maxEms="5"
                        android:ellipsize="end"
                        android:clickable="true"
                        android:text="User handle"
                        android:textColor="#76FF03"
                        android:textStyle="italic|bold"
                        tools:targetApi="o"
                        android:focusable="true" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <Button
                android:id="@+id/doc_options_approval"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:paddingStart="@dimen/cardview_default_radius"
                android:paddingLeft="@dimen/cardview_compat_inset_shadow"
                android:shadowColor="#000"
                android:text="@string/_8942"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:textSize="30sp"
                tools:ignore="RtlSymmetry" />

            <ProgressBar
                android:id="@+id/uploadProgressApprove"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:progressDrawable="@drawable/progress_circle"
                android:visibility="gone" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>