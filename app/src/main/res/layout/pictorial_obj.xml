<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_gravity="center"
    app:cardElevation="5dp"
    android:background="#BDBDBD"
    android:layout_margin="10dp"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/pictorialCard"
        android:gravity="center"
        app:cardBackgroundColor="#7A7A7A"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bitOptions"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:paddingStart="@dimen/cardview_default_radius"
                android:paddingLeft="@dimen/cardview_compat_inset_shadow"
                android:shadowColor="#000"
                android:text="@string/_8942"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/bitmapTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/bitOptions"
                android:layout_toEndOf="@+id/picBitmapRel"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearance"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/relevanceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/renameRel"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/bitOptions"
                android:layout_toEndOf="@+id/picBitmapRel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/renameET"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:inputType="textImeMultiLine" />

                <TextView
                    android:id="@+id/renameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/renameET"
                    android:background="@color/tw__blue_default"
                    android:maxLines="1"
                    android:text="Rename"
                    android:textStyle="bold"
                    android:textColor="@color/tw__composer_black" />


            </RelativeLayout>

            <ProgressBar
                android:id="@+id/publishProgress"
                android:visibility="gone"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_below="@+id/picBitmapRel"
                android:layout_marginTop="4dp"
                android:background="#000"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="1dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <ImageButton
                android:id="@+id/stopUpload"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/publishProgress"
                android:background="@android:color/transparent"
                android:src="@drawable/com_facebook_close" />


            <RelativeLayout
                android:id="@+id/picBitmapRel"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:background="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/picBitmap"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />

            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ratingCard"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/pictorialCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#171717"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ratingLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/commentsCountLY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_baseline_comment_white"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/commentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.1K"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#03A9F4"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/saveCountLY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_visibility"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/viewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.1K"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#03A9F4"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/viewCountLY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_round_star_yellow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                    <TextView
                        android:id="@+id/ratings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.1K"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#03A9F4"/>


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/publisher"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingLin"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center"
                android:maxEms="4"
                android:maxLines="1"
                android:padding="2dp"
                android:text="User handle"
                android:textColor="#E91E63"
                android:textSize="13sp"
                android:textStyle="italic|bold" />


            <TextView
                android:id="@+id/slideCount"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingLin"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:clickable="true"
                android:ellipsize="end"
                android:focusable="true"
                android:gravity="center"
                android:maxEms="4"
                android:maxLines="1"
                android:padding="2dp"
                android:text="23 slides"
                android:textColor="#76FF03"
                android:textSize="13sp"
                android:textStyle="italic|bold" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/templateCard"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/ratingCard"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            tools:showIn="@layout/activity_main" >

            <com.midland.ynote.TemplateView
                android:id="@+id/nativeTemplate"
                app:gnt_template_type="@layout/gnt_medium_template_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>