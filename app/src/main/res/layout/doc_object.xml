<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:padding="7dp"
    android:background="#000"
    android:layout_marginTop="3dp"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">




    <androidx.cardview.widget.CardView
        android:id="@+id/lectureCard"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp">

        <TextView
            android:id="@+id/uriStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/objectCoverPhoto"
            android:alpha="0.4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <RelativeLayout
            android:id="@+id/relFeed"
            android:background="#9C9C9C"
            android:layout_marginEnd="36dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/cardview_default_elevation">


            <ImageView
                android:id="@+id/picBitmap"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/bitmapDescription"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/pdf" />

            <TextView
                android:id="@+id/bitmapDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/doc_options"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:ems="7"
                android:gravity="center_horizontal"
                android:maxEms="7"
                android:maxLines="4"
                android:text="Numerical new stuff that I'm just adding Analysis of the marginal deficit of ammerican puplexities. I w"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="italic|bold"
                tools:targetApi="o" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bitmapDescription"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="90dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="6dp"
                    android:background="#fff" />

                <TextView
                    android:id="@+id/docDate"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:maxEms="9"
                    android:maxLines="4"
                    android:text="WhatsApp"
                    android:textColor="#000"
                    android:textSize="13sp"
                    android:textStyle="italic|bold"
                    tools:targetApi="o" />

            </LinearLayout>



            <Button
                android:id="@+id/doc_options"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:paddingStart="@dimen/cardview_default_radius"
                android:paddingLeft="@dimen/cardview_compat_inset_shadow"
                android:shadowColor="#000"
                android:text="@string/_8942"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:textSize="30sp"
                tools:ignore="RtlSymmetry" />



        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/sizeCard"
            android:layout_gravity="end"
            app:cardBackgroundColor="#000"
            android:layout_width="36dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="0dp">

                    <ImageView
                        android:src="@drawable/ic_storage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <TextView
                        android:id="@+id/docSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_1999_kb"
                        android:gravity="center"                        android:textSize="12sp"
                        android:textColor="#ffff"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>