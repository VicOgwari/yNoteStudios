<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homeRel"
    tools:context="com.midland.ynote.Activities.VideoUploader">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="#B6B3B3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/scrollModeVidUploader"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:visibility="gone"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_lock_open" />

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:alpha="0.8"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_slow_motion_video" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:alpha="0.8"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_baseline_videocam_24" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:alpha="0.8"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_slow_motion_video" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:alpha="0.8"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_baseline_videocam_24" />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#000"/>
            <View
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#000"/>

            <com.midland.ynote.Utilities.CustomScrollView
                android:id="@+id/vidUploaderSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        app:cardElevation="4dp"
                        android:id="@+id/docImageCard"
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="9dp">

                        <RelativeLayout
                            android:layout_margin="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <VideoView
                                android:id="@+id/vidPrev"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true" />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="start"
                        android:padding="4dp"
                        android:text="@string/video_title"
                        android:textColor="#fff"
                        android:background="#000"
                        android:layout_marginBottom="3dp"
                        android:textSize="19sp"
                        android:textStyle="bold|normal" />

                    <EditText
                        android:id="@+id/docTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/video_title"
                        android:background="#000"
                        android:textColorHint="#fff"
                        android:gravity="center"
                        android:textSize="19sp"
                        android:textStyle="normal"
                        android:textColor="#fff"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/institution"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="4dp"
                        android:text="Institution"
                        android:textColor="#fff"
                        android:background="#000"
                        android:layout_marginTop="9dp"
                        android:textSize="19sp"
                        android:textStyle="bold|normal" />

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:padding="8dp"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/institutionVidSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:spinnerMode="dialog" />

                        <EditText
                            android:id="@+id/institutionSpinnerET"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:textColor="#F50057"
                            android:textSize="19sp" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/school"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginTop="9dp"
                        android:padding="4dp"
                        android:text="School"
                        android:textColor="#fff"
                        android:background="#000"
                        android:textSize="18sp"
                        android:textStyle="bold|normal" />

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:padding="8dp"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/generalVidSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:spinnerMode="dialog" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="4dp"
                        android:layout_marginTop="9dp"
                        android:text="Department"
                        android:textColor="#fff"
                        android:background="#000"
                        android:textSize="19sp"
                        android:textStyle="bold|normal" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/subCatCard"
                        android:layout_gravity="center"
                        android:padding="8dp"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/subCategory1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="8dp"
                            android:spinnerMode="dialog" />

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Knowledge Base"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_marginTop="9dp"
                        android:textStyle="bold|normal"
                        android:background="#000"
                        android:textColor="#fff"
                        android:padding="4dp"/>


                    <LinearLayout
                        android:background="@drawable/edit_text_background"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/masters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="Masters"/>

                            <CheckBox
                                android:id="@+id/phd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="phD"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="9dp"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/yr1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="Yr 1"/>

                            <CheckBox
                                android:id="@+id/yr2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="Yr 2"/>

                            <CheckBox
                                android:id="@+id/yr3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="Yr 3"/>

                            <CheckBox
                                android:id="@+id/yr4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yr 4"/>

                            <CheckBox
                                android:id="@+id/yr5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="Yr 5"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="9dp"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="Certificate"/>

                            <CheckBox
                                android:id="@+id/dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="6dp"
                                android:text="Diploma"/>

                        </LinearLayout>



                    </LinearLayout>


                    <TextView
                        android:id="@+id/moreAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more_about_it"
                        android:gravity="start"
                        android:textSize="19sp"
                        android:textStyle="bold|normal"
                        android:textColor="#fff"
                        android:layout_marginTop="9dp"
                        android:background="#000"
                        android:padding="4dp"/>

                    <EditText
                        android:id="@+id/descriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="@string/_10_word_description"
                        android:inputType="textMultiLine"
                        android:maxEms="120"
                        android:textColor="#fff"
                        android:background="#000"
                        android:textColorHint="#fff"
                        android:minEms="20" />




                    <Button
                        android:id="@+id/addTagButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#000"
                        android:layout_marginTop="10dp"
                        android:text="Add tags (Optional)"
                        android:textStyle="normal|bold"
                        android:textColor="#fff"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/vidTagsRV"
                        android:layout_width="match_parent"
                        android:background="#000"
                        android:layout_marginTop="1dp"
                        android:layout_height="50dp"/>

                    <TextView
                        android:id="@+id/customThumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:text="@string/custom_thumbnail"
                        android:textColor="#fff"
                        android:layout_marginTop="10dp"
                        android:background="#000"
                        android:textSize="19sp"
                        android:textStyle="normal|bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:padding="5dp"
                        app:cardElevation="6dp"
                        app:cardCornerRadius="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_margin="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <androidx.constraintlayout.utils.widget.ImageFilterView
                                android:id="@+id/imageViewFilter"
                                android:visibility="gone"
                                android:layout_width="300dp"
                                android:layout_height="190dp"/>

                            <ImageView
                                android:id="@+id/bitmapTester"
                                android:visibility="gone"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="300dp"
                                android:layout_height="200dp"/>


                            <ImageView
                                android:id="@+id/videoThumbnail"
                                android:layout_width="300dp"
                                android:layout_height="190dp"/>

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/customThumbnail1"
                        android:layout_marginTop="5dp"
                        android:text="@string/custom_thumbnail"
                        android:gravity="end"
                        android:textSize="15sp"
                        android:textStyle="bold|normal"
                        android:textColor="#76FF03"
                        android:layout_gravity="center"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"/>




                    <View
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="#000"/>

                    <View
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:background="#000"/>

                    <Button
                        android:id="@+id/publishVid"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:text="@string/verify"
                        android:textColor="#000000"
                        android:layout_marginBottom="30dp"
                        android:textSize="25sp"/>

                </LinearLayout>

            </com.midland.ynote.Utilities.CustomScrollView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>