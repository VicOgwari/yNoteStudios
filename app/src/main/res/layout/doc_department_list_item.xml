<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#636363"
    android:layout_marginBottom="4dp"
    android:layout_height="350dp">

    <RelativeLayout
        android:layout_marginTop="3dp"
        android:id="@+id/majorRel"
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/docTags"
                    android:layout_centerVertical="true"
                    android:background="#8866548C"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <LinearLayout
                    android:id="@+id/searchFilterLayout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/yearFilter"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"/>

                    <SearchView
                        android:id="@+id/searchDocs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:iconifiedByDefault="false"
                        app:queryHint="Search document" />

                </LinearLayout>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/addDocButton"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:background="#FFEB3B"
                android:layout_marginStart="1dp"
                android:src="@drawable/ic_add_box_black_24dp"
                android:layout_marginRight="5dp" />

        </LinearLayout>



        <!--    <ProgressBar-->
        <!--        android:id="@+id/libraryProgress1"-->
        <!--        android:layout_width="120dp"-->
        <!--        android:layout_height="120dp"-->
        <!--        android:layout_centerInParent="true"/>-->





        <androidx.cardview.widget.CardView
            android:id="@+id/docCard"
            android:layout_below="@+id/top_layout"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="230dp" >

            <RelativeLayout
                android:layout_margin="5dp"
                android:background="#FFEB3B"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/documentRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#424040" />

                <ProgressBar
                    android:id="@+id/readProgress"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/tagsLayout"
            android:layout_below="@+id/docCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/departmentIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:ellipsize="end"
                android:ems="10"
                android:paddingTop="2dp"
                android:text="Department "
                android:textColor="#fff"
                android:textSize="15sp" />



        </RelativeLayout>



    </RelativeLayout>






</RelativeLayout>