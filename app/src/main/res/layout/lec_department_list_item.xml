<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:background="#000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/deptTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="|Agriculture &amp; Enterprise Development|"
            android:textColor="#ffff"
            android:textSize="17sp"
            android:textStyle="italic|bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/lecDisplayCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lecDisplayRV">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lecTags"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/navRight"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:src="@drawable/nav_right" />

        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lecDisplayRV"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@+id/deptTitle" />

        <ProgressBar
            android:id="@+id/readProgress1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="5dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>