<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <androidx.cardview.widget.CardView
            android:id="@+id/holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/fieldLY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <ImageView
                        android:id="@+id/schoolEmblem"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/nav_header_desc"
                        app:srcCompat="@drawable/lib_icon" />

                    <TextView
                        android:id="@+id/schoolName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:text="Engineering &amp; Technology"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000"
                        android:textStyle="bold" />

                </LinearLayout>

            </RelativeLayout>





            <Button
                android:id="@+id/schoolOptions"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:shadowColor="#000"
                android:text="@string/_8942"
                android:visibility="gone"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginEnd="7dp"
                android:textSize="30sp" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/enrolled"
            android:layout_below="@+id/statsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:textColor="#8BC34A"
            android:gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            android:text="Enrolled"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>