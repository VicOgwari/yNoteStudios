<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialogs.EnrollmentDialog">

    <RelativeLayout
        android:id="@+id/enrollmentRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/viewCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/selectedSchool"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/button_background"
                android:text="Selected department"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"/>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/subFieldsRV"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/viewCard" />

        <Button
            android:id="@+id/enrolButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subFieldsRV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_background"
            android:text="Enrol" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relevanceRel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/relevanceCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:textSize="17sp"
                android:textStyle="normal"
                android:gravity="center"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000"
                android:text="Relevance" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/relevanceTV"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/relevanceCard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#4C4A4A"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Edit relevance"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/updateRelevance"
            android:background="@drawable/button_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:text="Edit"
            android:layout_centerHorizontal="true" />

        <EditText
            android:gravity="center"
            android:id="@+id/relevanceET"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relevanceCard"
            android:inputType="textMultiLine" />


    </RelativeLayout>

</RelativeLayout>