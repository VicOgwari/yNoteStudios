<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.PhotoDocsComments">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/comments_sheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/lin"
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginBottom="5dp"
                    android:padding="3dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/docCommentET"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2.5"
                        android:layout_marginStart="2dp"
                        android:background="#A5A5A5"
                        android:hint="Say something..."
                        android:inputType="textImeMultiLine"
                        android:textColor="#fff" />

                    <Button
                        android:id="@+id/addCommentBtn"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="0.6"
                        android:background="#000000"
                        android:text="Add"
                        android:textColor="#ffff"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/optionsLin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin"
                    android:layout_marginBottom="1dp"
                    android:background="@color/tw__composer_black"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/addComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:backgroundTint="@color/tw__blue_pressed"
                        android:src="@drawable/ic_create_white" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/addDocument"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:backgroundTint="@color/tw__blue_pressed"
                        android:src="@drawable/ic_pages" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/addPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/fab_margin"
                        android:backgroundTint="@color/tw__blue_pressed"
                        android:src="@drawable/ic_camera_white" />

                    <ImageButton
                        android:id="@+id/rate"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/tw__composer_black"
                        android:src="@drawable/star_border" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/commentCarrier"
                    android:layout_below="@+id/optionsLin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:padding="9dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#000000"
                        android:layout_alignParentBottom="true">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/docCommentsRV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/tw__composer_light_gray" />

                        <TextView
                            android:id="@+id/justASec"
                            android:layout_width="130dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:background="#fff"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:text="Just a sec..."/>



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/imageRel"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/imageComment"
                            android:background="#AFAFAF"
                            android:layout_width="250dp"
                            android:layout_height="300dp" />

                        <ImageButton
                            android:id="@+id/discardImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/com_facebook_close"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/docRel"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/docEmblem"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/discardDoc"
                            android:scaleType="fitXY"
                            android:src="@drawable/pdf" />

                        <ImageButton
                            android:id="@+id/discardDoc"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/com_facebook_close" />

                        <TextView
                            android:id="@+id/docTitle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_alignParentBottom="true"
                            android:layout_toEndOf="@+id/docEmblem"
                            android:background="#C8C8C8"
                            android:gravity="center_vertical"
                            android:text="Document title"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ratingRel"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="7dp"
                    android:padding="5dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_marginTop="100dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.7"
                            android:background="#000">

                            <RatingBar
                                android:id="@+id/ratingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:numStars="5"
                                android:progressBackgroundTint="#EFEDE6"
                                android:stepSize="0.1"
                                tools:targetApi="lollipop" />


                            <Button
                                android:id="@+id/submitRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ratingBar"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="5dp"
                                android:text="Submit" />


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ideas_sheet"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_margin="10dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp"
        app:layout_behavior="com.midland.ynote.Utilities.LockableBottomSheetBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#303030"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/addToSlide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addBtn"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:text="More ideas..."
                android:textColor="#000" />

            <ImageButton
                android:id="@+id/addBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:background="#8BFA0A"
                android:src="@drawable/ic_check"/>

            <ImageButton
                android:id="@+id/outSource"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="#333333"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_open_in_new"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photosRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outSource"
                android:layout_centerHorizontal="true"
                android:background="#252525" />



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>