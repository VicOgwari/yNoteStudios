<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <VideoView
        android:id="@+id/cloudVideoView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/titleCard" />

    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        app:cardBackgroundColor="#F3EFC9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/vidTitle"
            style="@style/TextAppearance.AppCompat.Large"
            android:text="Hydro electric power generation by professor Owino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/cloudVideoView"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="#F4F0CB"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:alpha="0.8"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_round_star_yellow" />

                    <TextView
                        android:id="@+id/vidRating"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold|normal"
                        android:text="900"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginStart="110dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp">


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:alpha="0.8"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_eye_24" />

                    <TextView
                        android:id="@+id/vidViews"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold|normal"
                        android:text="9000"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>