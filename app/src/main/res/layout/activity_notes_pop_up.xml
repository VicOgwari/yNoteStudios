    <ScrollView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pointsRV"
                    android:layout_width="350dp"
                    android:layout_height="460dp"
                    android:layout_marginTop="30dp" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#000"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addContent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/addContent"
                        android:layout_width="225dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_toStartOf="@+id/addPoint"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#fff"
                        android:ems="10"
                        android:hint="Add a point"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textColorHint="#252525"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/addPoint"
                        android:layout_alignParentRight="true"
                        android:background="#9E6E30"
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_gavel" />

