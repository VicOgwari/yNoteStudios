<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tw__composer_deep_gray"
            app:layout_collapseMode="parallax"
            app:popupTheme="@style/AppTheme.PopupOverlay">



        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

    <RelativeLayout
        android:layout_marginTop="155dp"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ortiz.touchview.TouchImageView
            android:id="@+id/touchIV"
            android:layout_below="@+id/close"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/close"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:text="Press back to exit"
            android:visibility="gone"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#575757"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_sheet"
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="13dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardCornerRadius="5dp"
        app:layout_behavior="com.midland.ynote.Utilities.LockableBottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/tw__composer_deep_gray"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/tw__composer_deep_gray"
                    android:padding="4dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#222121"
                            android:padding="4dp">


                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/userPreview"
                                android:layout_width="65dp"
                                android:layout_height="70dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:background="#222121"
                                android:src="@color/com_facebook_blue" />

                            <TextView
                                android:id="@+id/philosophy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toEndOf="@+id/userPreview"
                                android:background="@color/tw__composer_black"
                                android:ellipsize="end"
                                android:maxEms="20"
                                android:maxLines="3"
                                android:text="..."
                                android:textColor="@color/tw__solid_white"
                                android:textStyle="bold" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/userPreview"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/userName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    android:text="@string/nav_header_title"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#fff" />

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="20dp"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginTop="@dimen/nav_header_vertical_spacing"
                                    android:layout_toEndOf="@+id/userName"
                                    android:layout_toRightOf="@+id/userName"
                                    android:background="#fff" />

                                <TextView
                                    android:id="@+id/userEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="11dp"
                                    android:layout_toEndOf="@+id/userName"
                                    android:layout_toRightOf="@+id/userName"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    android:textColor="#fff" />

                            </RelativeLayout>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <View
                    android:layout_width="100dp"
                    android:layout_height="4dp"
                    android:layout_below="@+id/rel1"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="#fff" />

            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222121"
                    android:padding="4dp">


                    <ImageView
                        android:id="@+id/readListImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#E6E6E6"
                        android:src="@drawable/ic_collections_bookmark" />


                    <TextView
                        android:id="@+id/readList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@+id/readListImage"
                        android:layout_toRightOf="@+id/readListImage"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:padding="4dp"
                        android:text="@string/read_list"
                        android:textColor="@color/tw__solid_white"
                        android:textSize="17sp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222121"
                    android:padding="4dp">


                    <ImageView
                        android:id="@+id/lecturesListImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#E6E6E6"
                        android:src="@drawable/ic_video_library" />


                    <TextView
                        android:id="@+id/lecturesList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@+id/lecturesListImage"
                        android:layout_toRightOf="@+id/lecturesListImage"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:padding="4dp"
                        android:text="@string/watch_list"
                        android:textColor="@color/tw__solid_white"
                        android:textSize="17sp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222121"
                    android:padding="4dp">


                    <ImageView
                        android:id="@+id/pendingLecImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#E6E6E6"
                        android:src="@drawable/ic_pending" />


                    <TextView
                        android:id="@+id/pendingLec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@+id/pendingLecImage"
                        android:layout_toRightOf="@+id/pendingLecImage"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:padding="4dp"
                        android:text="@string/pending_lectures"
                        android:textColor="@color/tw__solid_white"
                        android:textSize="17sp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222121"
                    android:padding="4dp">


                    <ImageView
                        android:id="@+id/completedLecImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#E6E6E6"
                        android:src="@drawable/ic_completed_lectures" />


                    <TextView
                        android:id="@+id/completeLectures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@+id/completedLecImage"
                        android:layout_toRightOf="@+id/completedLecImage"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:padding="4dp"
                        android:text="@string/completed_lectures"
                        android:textColor="@color/tw__solid_white"
                        android:textSize="17sp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222121"
                    android:padding="4dp">


                    <ImageView
                        android:id="@+id/publishedDocumentsImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#E6E6E6"
                        android:src="@drawable/ic_published_documents" />


                    <TextView
                        android:id="@+id/publishedDocuments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@+id/publishedDocumentsImage"
                        android:layout_toRightOf="@+id/publishedDocumentsImage"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:padding="4dp"
                        android:text="Published documents"
                        android:textColor="@color/tw__solid_white"
                        android:textSize="17sp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#222121"
                    android:padding="4dp">


                    <ImageView
                        android:id="@+id/publishedLecturesImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:background="#E6E6E6"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_published_lectures"/>


                    <TextView
                        android:id="@+id/publishedLectures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@+id/publishedLecturesImage"
                        android:layout_toRightOf="@+id/publishedLecturesImage"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:padding="4dp"
                        android:text="@string/published_lectures"
                        android:textColor="@color/tw__solid_white"
                        android:textSize="17sp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>