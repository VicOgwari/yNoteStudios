<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SearchResults">

    <RelativeLayout
        android:id="@+id/searchDocRel"
        android:background="#222222"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp"
            android:background="#000"
            android:orientation="horizontal"
            android:padding="5dp">


            <EditText
                android:id="@+id/searchDocs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                app:iconifiedByDefault="false"
                app:queryHint="Search documents" />

            <ImageButton
                android:id="@+id/search"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:background="#000"
                android:src="@drawable/search_white" />

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addDoc"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/filterLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_add_box_black_24dp"/>

        <RelativeLayout
            android:id="@+id/filterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/top_layout"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:gravity="center"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/institutionSpinner"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:background="#919191" />

            <Spinner
                android:id="@+id/filterSpinner"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_toEndOf="@+id/institutionSpinner"
                android:background="#FFFFFF" />

            <Spinner
                android:id="@+id/subFieldSpinner"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_toEndOf="@+id/filterSpinner"
                android:background="#919191" />

            <Button
                android:id="@+id/performFilter"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/subFieldSpinner"
                android:background="#131313"
                android:text="@string/go"
                android:textColor="#ffff"
                android:textStyle="bold" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resultsRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/filterLayout"
            android:layout_below="@+id/searchSchool"
            android:layout_marginTop="4dp"
            android:background="#858585" />

        <RelativeLayout
            android:id="@+id/pastPperRel"
            android:background="@color/tw__light_gray"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_above="@+id/filterLayout">

            <CheckBox
                android:id="@+id/ppCheck"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/ppCheck"
                android:text="@string/past_paper"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/searchProgress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:id="@+id/searchSchool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#000"
            android:gravity="center"
            android:text="Agriculture &amp; development"
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/docViewerRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <WebView
            android:id="@+id/docView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/closeDocView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/com_facebook_close" />

            <ImageButton
                android:id="@+id/docComments"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:elevation="10dp"
                android:background="#000"
                android:src="@drawable/ic_baseline_comment_white" />


        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/comments_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp"
        app:layout_behavior="com.midland.ynote.Utilities.LockableBottomSheetBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="9dp">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/docCommentET"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:background="#000"
                    android:hint="Say something..."
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/addCommentBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#F50057"
                    android:text="Add"
                    android:textSize="20sp" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lin">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/docCommentsRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff" />



            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>