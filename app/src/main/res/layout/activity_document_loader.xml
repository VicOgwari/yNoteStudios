<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/docViewCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DocumentLoader">

    <RelativeLayout
        android:id="@+id/docViewerRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <WebView
            android:id="@+id/docView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/adView" />

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1383978019158618/5904737604"></com.google.android.gms.ads.AdView>

        <ProgressBar
            android:id="@+id/readBuffer"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:elevation="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/closeDocView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/com_facebook_close" />


            <ImageButton
                android:id="@+id/docComments"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@color/tw__composer_black"
                android:elevation="10dp"
                android:src="@drawable/ic_baseline_comment_white" />

            <ImageButton
                android:id="@+id/saveDoc"
                android:layout_width="40dp"
                android:visibility="gone"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="#000"
                android:elevation="10dp"
                android:src="@drawable/ic_white_save" />

            <ImageButton
                android:id="@+id/addToPins"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:rotationX="180"
                android:layout_marginStart="10dp"
                android:background="@color/tw__composer_black"
                android:elevation="10dp"
                android:src="@drawable/ic_brown_pin" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageButton
                    android:id="@+id/refresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="9dp"
                    android:background="@color/tw__solid_white"
                    android:src="@drawable/ic_refresh" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/comments_sheet"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:layout_margin="10dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp"
        app:layout_behavior="com.midland.ynote.Utilities.LockableBottomSheetBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ortiz.touchview.TouchImageView
                android:id="@+id/touchIV"
                android:visibility="gone"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:id="@+id/docTitleRel"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@id/docTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="Document Title"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/subscribe"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#fff"
                    android:src="@drawable/ic_bookmark_border" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin"
                android:layout_below="@+id/docTitleRel"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:padding="3dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/docCommentET"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="2.5"
                    android:layout_marginStart="2dp"
                    android:background="#A5A5A5"
                    android:hint="Say something..."
                    android:inputType="textImeMultiLine"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/addCommentBtn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="0.6"
                    android:background="#000000"
                    android:text="Add"
                    android:textColor="#ffff"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/optionsLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin"
                android:layout_marginBottom="1dp"
                android:background="#333333"
                android:gravity="center"
                android:orientation="horizontal">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:backgroundTint="#000"
                    android:src="@drawable/ic_create_white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addDocument"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:backgroundTint="#000"
                    android:src="@drawable/ic_pages" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:backgroundTint="#000"
                    android:src="@drawable/ic_camera_white" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/commentCarrier"
                android:layout_below="@+id/optionsLin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:padding="9dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:layout_alignParentBottom="true">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/docCommentsRV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4C4C4C" />

                    <TextView
                        android:id="@+id/justASec"
                        android:layout_width="130dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:background="#fff"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Just a sec..."/>



                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/imageRel"
                    android:visibility="gone"
                    android:background="#000"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/imageComment"
                        android:background="#AFAFAF"
                        android:layout_width="250dp"
                        android:layout_height="300dp" />

                    <ImageButton
                        android:id="@+id/discardImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/com_facebook_close"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/docRel"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/docEmblem"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_below="@+id/discardDoc"
                        android:scaleType="fitXY"
                        android:src="@drawable/pdf" />

                    <ImageButton
                        android:id="@+id/discardDoc"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/com_facebook_close" />

                    <TextView
                        android:id="@+id/docTitle"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/docEmblem"
                        android:background="#C8C8C8"
                        android:gravity="center_vertical"
                        android:text="Document title"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ideas_sheet"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_margin="10dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="9dp"
        app:layout_behavior="com.midland.ynote.Utilities.LockableBottomSheetBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#303030"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/addToSlide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addBtn"
                android:background="#fff"
                android:gravity="center_horizontal"
                android:text="More ideas..."
                android:textColor="#000" />

            <ImageButton
                android:id="@+id/addBtn"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:background="#8BFA0A"
                android:src="@drawable/ic_check"/>

            <ImageButton
                android:id="@+id/outSource"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:background="#333333"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_open_in_new"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/photosRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outSource"
                android:layout_centerHorizontal="true"
                android:background="#252525" />



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>