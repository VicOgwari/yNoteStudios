<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CCCFCFCF"
    android:id="@+id/metaDataRel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MultiUpload">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/selectionsPrev"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="220dp"/>


        <com.midland.ynote.Utilities.CustomScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:background="#CC373737"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/docLy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:background="#CC373737"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/indexTv"
                    android:text="1 of 5"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#ffff"
                    android:background="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/lectureCard"
                    android:layout_margin="3dp"
                    app:cardBackgroundColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="9dp">

                    <TextView
                        android:id="@+id/uriStore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>


                    <RelativeLayout
                        android:id="@+id/relFeed"
                        android:background="#ACABAB"
                        android:layout_marginEnd="36dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/cardview_default_elevation">


                        <ImageView
                            android:id="@+id/docIm"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="5dp"
                            android:background="@android:color/transparent"
                            android:scaleType="fitXY"
                            android:src="@drawable/pdf" />

                        <TextView
                            android:id="@+id/docNameTv"
                            android:layout_width="308dp"
                            android:layout_height="31dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@+id/docIm"
                            android:ellipsize="end"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:ems="7"
                            android:gravity="center_horizontal"
                            android:maxEms="7"
                            android:maxLines="4"
                            android:text="Numerical new stuff that I'm just adding Analysis of the marginal deficit of ammerican puplexities. I w"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:textStyle="italic|bold"
                            tools:targetApi="o" />



                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sizeCard"
                        android:layout_gravity="end"
                        app:cardBackgroundColor="#000"
                        android:layout_width="36dp"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="0dp">

                                <ImageView
                                    android:src="@drawable/ic_storage"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"/>

                                <TextView
                                    android:id="@+id/docSizeTv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_1999_kb"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="#ffff"/>


                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/noPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="5dp"
                        android:background="#000"
                        android:gravity="center"
                        android:text="@string/preview_unavailable"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </RelativeLayout>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="8dp"
                    app:cardBackgroundColor="#000"
                    app:cardCornerRadius="9dp">


                    <EditText
                        android:id="@+id/unitCodeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:ems="10"
                        android:hint="Unit code e.g UCU 103"
                        android:inputType="textMultiLine"
                        android:textColor="#ffff"
                        android:textColorHint="#fff"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="8dp"
                    app:cardBackgroundColor="#000"
                    app:cardCornerRadius="9dp">


                    <EditText
                        android:id="@+id/docDetails"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="4dp"
                        android:background="#000"
                        android:ems="10"
                        android:hint="@string/unit_title"
                        android:inputType="textMultiLine"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#CC3E3E3E"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center"
                        android:background="#fff"
                        android:textColor="#000"
                        android:text="@string/knowledge_base"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:padding="5dp">

                        <com.midland.ynote.Utilities.CustomHorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/yr1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:text="Yr 1" />

                                <CheckBox
                                    android:id="@+id/yr2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:text="Yr 2" />

                                <CheckBox
                                    android:id="@+id/yr3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:text="Yr 3" />

                                <CheckBox
                                    android:id="@+id/yr4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yr 4" />

                                <CheckBox
                                    android:id="@+id/yr5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yr 5" />

                                <CheckBox
                                    android:id="@+id/masters"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:text="@string/masters" />

                                <CheckBox
                                    android:id="@+id/phd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:text="@string/phd" />


                                <CheckBox
                                    android:id="@+id/cert"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:text="Certificate" />

                                <CheckBox
                                    android:id="@+id/dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:text="Diploma" />

                                <CheckBox
                                    android:id="@+id/bridging"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:text="Bridging course" />

                                <CheckBox
                                    android:id="@+id/higherDip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:text="Higher diploma" />

                            </LinearLayout>

                        </com.midland.ynote.Utilities.CustomHorizontalScrollView>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:background="#474747"
                        android:padding="8dp"
                        app:cardCornerRadius="9dp">

                        <Spinner
                            android:id="@+id/semSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:background="#000"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|center_vertical"
                            android:maxLines="1"
                            android:textColor="#ffff" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:text="Is this document a past examination paper?"
                        android:textColor="#fff" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/tw__composer_light_gray"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkboxNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/No" />

                        <CheckBox
                            android:id="@+id/checkboxYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="3dp"
                            android:text="@string/yes" />

                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/selectColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/click_on_me" />


                <ProgressBar
                    android:id="@+id/uploadProgress"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/hideLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/prev"
                        android:layout_width="0dp"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFC107"
                        android:text="@string/prev" />

                    <Button
                        android:id="@+id/next"
                        android:layout_width="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFC107"
                        android:text="@string/next" />

                </LinearLayout>


            </LinearLayout>

        </com.midland.ynote.Utilities.CustomScrollView>


    </LinearLayout>


</RelativeLayout>
