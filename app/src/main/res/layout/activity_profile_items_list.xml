<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutCoord"
    tools:context="com.midland.ynote.Activities.ProfileItemsList">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#493D39"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profileToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#000"
            app:layout_collapseMode="parallax"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>



    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/tw__composer_deep_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/selectCard"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/uploadProg"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/selectedImage"
                    android:layout_width="280dp"
                    android:layout_height="300dp"/>

                <EditText
                    android:id="@+id/saySomething"
                    android:layout_margin="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:inputType="textImeMultiLine"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/discardBtn"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/discard"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:id="@+id/updateBtn"
                        android:text="@string/update"
                        android:background="@color/tw__composer_blue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addToGallery"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_add_box_black_24dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/schoolsRV"
            android:background="#EFEFEA"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <ProgressBar
            android:id="@+id/profileProgress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/schoolsRV"
            android:background="@color/colorPrimary"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shelfRV"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/publishedDocsRV"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/publishedLecRV"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/completedLecRV"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pendingLecGrid"
            android:visibility="gone"
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/glowRel"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="#11DFFA"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/vid_comments_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:cardElevation="9dp"
        app:cardCornerRadius="5dp"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.midland.ynote.Utilities.LockableBottomSheetBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vidAddCommentBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="#F50057"
                    android:text="Add"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/vidCommentET"
                    android:background="#fff"
                    android:textColor="#000"
                    android:layout_width="300dp"
                    android:layout_height="50dp"/>



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vidCommentsRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/ratingRelActivity"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:layout_marginBottom="400dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="9dp"
            android:layout_centerInParent="true"
            app:cardElevation="7dp">

            <RelativeLayout
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/ratingBarActivity"
                    android:progressBackgroundTint="#FFC400"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:numStars="5"
                    android:stepSize="0.1"
                    tools:targetApi="lollipop" />


                <Button
                    android:layout_below="@+id/ratingBarActivity"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:id="@+id/submitRateActivity"/>



            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/docViewerRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/lecturePlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="true"
            app:resize_mode="fill"
            android:layout_margin="5dp"/>


        <ProgressBar
            android:id="@+id/lectureBuffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:indeterminate="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/closeLecture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/com_facebook_close" />

            <ImageButton
                android:id="@+id/lectureComments"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:elevation="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_black_comment" />

            <ImageView
                android:id="@+id/lecRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="5dp"
                android:src="@drawable/ic_round_star_yellow"
                />

        </LinearLayout>

    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>