<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="6dp"
    android:id="@+id/imageRel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/tw__composer_black"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:id="@+id/imageCard"
        android:gravity="center"
        app:cardBackgroundColor="@color/tw__composer_black"
        app:cardMaxElevation="2dp"
        android:layout_width="wrap_content"
        android:layout_height="390dp"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_width="350dp"
            android:layout_height="380dp"
            android:id="@+id/photo"
            android:src="@drawable/ic_launcher_background"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/imageCard"
        android:layout_width="350dp"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/tw__composer_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/up"
                android:background="@color/tw__composer_deep_gray"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:src="@drawable/ic_up"
                    android:background="@color/tw__composer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/upVotes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/tw__composer_black"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFEB3B" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/down"
                android:gravity="center"
                android:background="@color/tw__composer_deep_gray"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:src="@drawable/ic_down"
                    android:background="@color/tw__composer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/downVotes"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/tw__composer_black"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFEB3B" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/comment"
                android:orientation="horizontal"
                android:background="@color/tw__composer_deep_gray"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:src="@drawable/ic_baseline_comment_white"
                    android:background="@color/tw__composer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/commentsCount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/tw__composer_black"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#FFEB3B" />

            </LinearLayout>




            <TextView
                android:id="@+id/cid1"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:background="#000"
                android:gravity="center"
                android:text="0 Replies"
                android:textColor="#FFEB3B" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>