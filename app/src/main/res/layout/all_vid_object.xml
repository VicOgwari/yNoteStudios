<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:padding="3dp"
    android:background="#03A9F4"
    android:layout_marginBottom="3dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="4dp"
        app:cardElevation="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="4dp"
            android:background="#222121"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/vidPreviewCard"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="4dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/vidPreview"
                    android:background="#222121"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/doc_options"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:shadowColor="#000"
                android:text="@string/_8942"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#fff"
                android:textSize="30sp" />


            <TextView
                android:id="@+id/vidName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="40dp"
                android:layout_toEndOf="@+id/vidPreviewCard"
                android:background="#222121"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="4"
                android:padding="4dp"
                android:text="Vid name"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/vidSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vidPreviewCard"
                android:layout_marginStart="5dp"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:text="Vid size"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vidDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vidPreviewCard"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="#fff"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:text="Vid date"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/renameRel"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/renameET"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:inputType="textImeMultiLine" />

                <TextView
                    android:id="@+id/renameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/renameET"
                    android:background="@color/tw__blue_default"
                    android:maxLines="1"
                    android:text="Rename"
                    android:textStyle="bold"
                    android:textColor="@color/tw__composer_black" />


            </RelativeLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>