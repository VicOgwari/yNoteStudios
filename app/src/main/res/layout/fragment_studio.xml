<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/tw__composer_deep_gray"
    android:id="@+id/studScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Studio">

    <ScrollView
        android:background="@color/tw__composer_deep_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="#000"
                    android:textColor="#FF0606"
                    android:textStyle="bold"
                    android:text="@string/do_not_misuse_this_studio"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ask_your"
                    android:background="#000"
                    android:textColor="#fff"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/documentOnlyRel"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textColor="@color/tw__composer_deep_gray"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <Button
                        android:id="@+id/docBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@color/tw__composer_blue_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:paddingRight="@dimen/nav_header_vertical_spacing"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark">

                        <ImageView
                            android:id="@+id/docOnlyEmblem"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/nav_header_desc"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/lib_icon" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:text="@string/document_only"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#000"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#2"
                        android:textColor="@color/tw__composer_deep_gray"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <Button
                        android:id="@+id/picBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@color/tw__composer_blue_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:paddingRight="@dimen/nav_header_vertical_spacing"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/nav_header_desc"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_pictorials" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:text="@string/pictorial_only"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#000"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#3"
                        android:textColor="@color/tw__composer_deep_gray"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <Button
                        android:id="@+id/camBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@color/tw__composer_blue_text" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:paddingRight="@dimen/nav_header_vertical_spacing"
                        android:paddingBottom="@dimen/nav_header_vertical_spacing"
                        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/nav_header_desc"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            app:srcCompat="@drawable/ic_camera_" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:text="@string/camera_only"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="#000"
                            android:maxLines="1"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/docCamRel"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/docCamCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#4"
                        android:textColor="@color/tw__composer_black"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <Button
                        android:id="@+id/docCamButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@color/tw__composer_black" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:paddingBottom="@dimen/nav_header_vertical_spacing"
                            android:theme="@style/ThemeOverlay.AppCompat.Dark">

                            <ImageView
                                android:id="@+id/docCamEmblem"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/nav_header_desc"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                app:srcCompat="@drawable/lib_icon" />




                        </LinearLayout>

                        <ImageButton
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_add_box_black_24dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:paddingBottom="@dimen/nav_header_vertical_spacing"
                            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                            <ImageView
                                android:id="@+id/camEmblem"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/nav_header_desc"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                app:srcCompat="@drawable/ic_camera_" />




                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#5"
                        android:textColor="@color/tw__composer_black"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <Button
                        android:id="@+id/picCamButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@color/tw__composer_black" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:paddingBottom="@dimen/nav_header_vertical_spacing"
                            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/nav_header_desc"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                app:srcCompat="@drawable/ic_pictorials" />



                        </LinearLayout>

                        <ImageButton
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_add_box_black_24dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/nav_header_vertical_spacing"
                            android:paddingRight="@dimen/nav_header_vertical_spacing"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="@dimen/nav_header_vertical_spacing"
                            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:contentDescription="@string/nav_header_desc"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                app:srcCompat="@drawable/ic_camera_" />



                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relLibrary"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/shelfCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp">


                    <Button
                        android:id="@+id/libraryButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.2"
                        android:background="@color/tw__composer_blue_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#6"
                        android:textColor="@color/tw__composer_deep_gray"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:textStyle="bold"
                        android:textSize="17sp"/>

                    <HorizontalScrollView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                android:paddingRight="@dimen/nav_header_vertical_spacing"
                                android:paddingBottom="@dimen/nav_header_vertical_spacing"
                                android:theme="@style/ThemeOverlay.AppCompat.Dark">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/nav_header_desc"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    app:srcCompat="@drawable/lib_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    android:text="@string/document"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#000"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <ImageButton
                                android:layout_gravity="center_vertical"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_add_box_black_24dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                android:paddingRight="@dimen/nav_header_vertical_spacing"
                                android:paddingBottom="@dimen/nav_header_vertical_spacing"
                                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/nav_header_desc"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    app:srcCompat="@drawable/ic_pictorials"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    android:text="@string/pictorials"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#000"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <ImageButton
                                android:layout_gravity="center_vertical"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_add_box_black_24dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/activity_horizontal_margin"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                android:paddingRight="@dimen/nav_header_vertical_spacing"
                                android:paddingBottom="@dimen/nav_header_vertical_spacing"
                                android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:contentDescription="@string/nav_header_desc"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    app:srcCompat="@drawable/ic_camera_" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                                    android:text="@string/camera"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                                    android:textColor="#000"
                                    android:textStyle="bold" />


                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pendingLY"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/pending_lectures"
                    android:textColor="@color/tw__solid_white"
                    android:layout_gravity="center"
                    android:background="@color/tw__composer_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pendingRV"
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>



    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
