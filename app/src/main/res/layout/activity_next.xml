<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/nextRel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/tw__composer_black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Next"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#050505"
                android:fitsSystemWindows="true"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/lecListToolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#2C2C2C"
                    app:layout_collapseMode="parallax"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/finishingUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finishing up"
                            android:textColor="#ffff"
                            android:textStyle="bold"
                            android:textSize="19sp"/>
                    </LinearLayout>

                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:id="@+id/docLy"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="#CC83ED83"
                android:layout_below="@+id/app_bar"
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <TextView
                    android:id="@+id/thanksDoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="#8BC34A"
                    android:textColor="#ffff"
                    android:text="Thanks for contributing to the ...."
                    android:textSize="19sp"/>


                <EditText
                    android:id="@+id/unitCodeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="Unit code e.g UCU 103"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#252525"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/docDetails"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:background="#fff"
                    android:ems="10"
                    android:hint="@string/any_other_helpful_information"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#252525"
                    android:textSize="15sp"/>

                <Button
                    android:id="@+id/relevance"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/button_background"
                    android:text="Five tags (Optional)" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/signUpRel"
                android:layout_width="match_parent"
                android:background="#6E6A6A"
                android:layout_height="wrap_content"
                android:layout_below="@+id/app_bar"
                android:visibility="visible">

                <TextView
                    android:id="@+id/selectA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="Select a thumbnail"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/selectB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selectA"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/selectedImage1"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_below="@+id/selectedImageRel"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#505050"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/addImage1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignTop="@+id/selectedImage1"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        android:background="#8BC34A"
                        android:src="@drawable/ic_add_box_black_24dp"
                        android:visibility="gone" />


                    <RelativeLayout
                        android:id="@+id/selectedImageRel"
                        android:layout_width="250dp"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:background="#EEEE">

                        <ImageView
                            android:id="@+id/selectedImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_account_circle" />

                        <ImageButton
                            android:id="@+id/addImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@color/tw__light_gray"
                            android:src="@drawable/ic_add_box_black_24dp" />


                    </RelativeLayout>


                </RelativeLayout>

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/selectB"
                    android:layout_centerHorizontal="true"
                    android:background="#000"
                    android:ellipsize="end"
                    android:ems="5"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Username"
                    android:textColor="#ffff" />

                <LinearLayout
                    android:id="@+id/roleLY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userName"
                    android:layout_marginTop="15dp"
                    android:background="#EFEFEF"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/studCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:text="@string/student" />

                    <CheckBox
                        android:id="@+id/lecCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="@string/lecturer" />

                </LinearLayout>

                <EditText
                    android:id="@+id/philosophy"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/roleLY"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edit_text_background"
                    android:ems="10"
                    android:hint="@string/what_is_your_philosophy"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="#252525"
                    android:textSize="15sp" />

            </RelativeLayout>


            <Button
                android:id="@+id/signUp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signUpRel"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="2dp"
                android:background="#FFEB3B"
                android:text="@string/sign_up" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="30dp"
                android:visibility="invisible" />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>