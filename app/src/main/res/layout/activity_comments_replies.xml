<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.midland.ynote.Activities.CommentsReplies">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/commentCard"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/commentCarrier"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/commenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic|bold"
                        android:text="username"
                        android:padding="2dp"
                        android:background="#000000"
                        android:layout_marginTop="3dp"
                        android:textColor="#00BCD4"
                        android:layout_gravity="start"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"/>

                    <com.borjabravo.readmoretextview.ReadMoreTextView
                        android:id="@+id/comment_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:hint="Username"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:layout_margin="10dp"/>


                    <TextView
                        android:id="@+id/comment_time_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#000"
                        android:textStyle="bold|normal"
                        android:gravity="end"
                        android:hint="time"
                        android:layout_margin="10dp"/>



                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCommentCard"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/im_commenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="10dp"
                        android:background="#222222"
                        android:padding="2dp"
                        android:text="username"
                        android:textColor="#00BCD4"
                        android:textStyle="italic|bold" />


                    <ImageView
                        android:id="@+id/imageComment"
                        android:layout_below="@+id/im_commenter"
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_hourglass_bottom_white"
                        android:layout_weight="1"
                        android:layout_height="250dp"/>

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/imageCommentVP"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@+id/im_commenter" />

                </RelativeLayout>



                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    app:cardBackgroundColor="#000"
                    android:layout_width="0dp"
                    android:layout_height="250dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:background="#8E8E8E"
                        android:layout_margin="4dp"
                        android:layout_height="match_parent">


                        <com.borjabravo.readmoretextview.ReadMoreTextView
                            android:id="@+id/im_comment_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:hint="Username"
                            android:maxLines="8"
                            android:textColor="#000"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <TextView
                            android:id="@+id/im_comment_time_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/im_comment_user_name"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="1dp"
                            android:gravity="end"
                            android:hint="time"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:textStyle="bold|normal" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/repliesRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>