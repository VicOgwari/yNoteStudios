<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout1"
    tools:context="com.midland.ynote.Activities.LectureStudio">



    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/record"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="#7CF62E"
            android:src="@drawable/ic_baseline_videocam_24" />


        <RelativeLayout
            android:id="@+id/compressionProgressLayout"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/compressionProgress"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/progress_circle"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:minWidth="290dp"
                android:minHeight="290dp" />

            <androidx.cardview.widget.CardView
                android:layout_centerInParent="true"
                app:cardCornerRadius="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/compressionProgressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="0%"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cameraCard"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#FFEA00"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">

            <RelativeLayout
                android:layout_gravity="center"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/cameraPreview"
                    android:background="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:layout_width="130dp"
                    android:layout_height="130dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="70dp"
            android:src="@drawable/ic_baseline_center_focus" />

        <View
            android:id="@+id/topBlinder"
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.4"
            android:background="#000"
            android:visibility="gone" />

        <View
            android:id="@+id/bottomBlinder"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="506dp"
            android:alpha="0.4"
            android:background="#000"
            android:visibility="gone" />


        <View
            android:id="@+id/topBlinder2"
            android:layout_width="match_parent"
            android:layout_height="385dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.4"
            android:background="#000"
            android:visibility="gone" />

        <View
            android:id="@+id/bottomBlinder2"
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="450dp"
            android:alpha="0.4"
            android:background="#000"
            android:visibility="gone" />







    </com.github.barteksc.pdfviewer.PDFView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="55dp"
        app:cardCornerRadius="5dp"
        app:layout_behavior="com.example.ynote.Utilities.LockableBottomSheetBehavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/text_countDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00FFE6"
                    android:text="00:00"
                    android:textSize="20sp"/>

                <ImageButton
                    android:id="@+id/scrollMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_lock_open"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/brushType"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_brush_24" />

                            <ImageButton
                                android:id="@+id/brushSize"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_text_fields_24" />

                            <ImageButton
                                android:id="@+id/brushColor"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_palette_24" />

                            <ImageButton
                                android:id="@+id/eraser"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/circle_shape" />

                            <ImageButton
                                android:id="@+id/undo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_undo_24" />

                            <ImageButton
                                android:id="@+id/redo"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_redo_24" />

                            <ImageButton
                                android:id="@+id/saveBitmap"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_save_24" />

                            <ImageButton
                                android:id="@+id/otherOptions"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_baseline_more_vert_24" />

                            <ImageButton
                                android:id="@+id/paintStudio"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_open_in_new" />

                            <ToggleButton
                                android:id="@+id/toggleButton"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@color/colorAccent"
                                android:textOff="Record"
                                android:textOn="Stop" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <com.midland.ynote.Utilities.CustomHorizontalScrollView
                android:id="@+id/paintHorizontalView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.midland.ynote.Utilities.CustomScrollView
                    android:id="@+id/paintScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimaryDark">

                        <com.midland.ynote.Utilities.Paint.PaintView
                            android:id="@+id/paintView"
                            android:layout_width="1200dp"
                            android:layout_height="1200dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="9dp"
                            android:layout_marginLeft="9dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginEnd="9dp"
                            android:layout_marginRight="9dp"
                            android:layout_marginBottom="9dp"
                            android:fadeScrollbars="true"
                            android:padding="5dp">

                        </com.midland.ynote.Utilities.Paint.PaintView>


                    </RelativeLayout>

                </com.midland.ynote.Utilities.CustomScrollView>

            </com.midland.ynote.Utilities.CustomHorizontalScrollView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>