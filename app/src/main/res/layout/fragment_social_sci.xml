<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.midland.ynote.Fragments.SocialSciSubCat">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainFieldCard"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            app:cardBackgroundColor="#454444"
            app:cardElevation="9dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="Social Sciences"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_below="@+id/mainFieldCard"
            android:layout_marginTop="2dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <View
            android:layout_below="@+id/mainFieldCard"
            android:background="#000"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="5dp"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/socialSciCardView"
            android:layout_below="@+id/mainFieldCard"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/anthroCard"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/anthropology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Anthropology"/>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/archaeologyCard"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/chem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Archaeology"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/economicsCard"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/economics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Economics"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/geographyCard"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/geography"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Geography"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/politicalSciCard"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/politicalSci"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Political science"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/psychologyCard"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/psychology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Psychology"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/sociologyCard"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/sociology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Sociology"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/socialWordCard"
                        app:cardCornerRadius="10dp"
                        android:layout_marginStart="10dp"
                        app:cardElevation="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/socialWork"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Social work"/>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </HorizontalScrollView>


        </androidx.cardview.widget.CardView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/socialSciViewPager"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/socialSciCardView"/>


    </RelativeLayout>



</FrameLayout>