<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imCommentObj"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/homeSliderCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.flaviofaria.kenburnsview.KenBurnsView
                android:id="@+id/backgroundImageHM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#FFFFFF" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="@drawable/ui_color5" />

            <LinearLayout
                android:id="@+id/carrierLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/nav_header_vertical_spacing"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:paddingRight="@dimen/nav_header_vertical_spacing"
                    android:paddingBottom="@dimen/nav_header_vertical_spacing"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userDisplayImageHM"
                        android:layout_width="70dp"
                        android:layout_height="75dp"
                        android:contentDescription="@string/nav_header_desc"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        app:srcCompat="@mipmap/ic_launcher_round" />

                    <TextView
                        android:id="@+id/displayNameHM"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingTop="@dimen/nav_header_vertical_spacing"
                        android:text="@string/nav_header_title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/department"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Engineering"
                        android:textColor="#494848" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/studCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_weight="1"
                            android:alpha="0.7"
                            android:gravity="center"
                            android:background="@color/tw__composer_black"
                            android:text="3 S"
                            android:textColor="#fff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/coachCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:alpha="0.7"
                            android:gravity="center"
                            android:background="@color/tw__composer_black"
                            android:text=" 2 C"
                            android:textColor="#ffff"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/university"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kenyatta University"
                        android:textColor="#000" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/philosophyRel"
                    android:layout_width="0dp"
                    android:layout_height="182dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/uid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/userEmailHM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:maxLines="1"
                        android:text="@string/nav_header_subtitle"
                        android:visibility="gone" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="15dp"
                        android:alpha="0.6"
                        app:cardBackgroundColor="#000"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="9dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/philosophyHM"
                                android:layout_width="135dp"
                                android:layout_height="match_parent"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="5"
                                android:padding="5dp"
                                android:text="What we know is a drop. What we don't know is an ocean."
                                android:textColor="#fff"
                                android:textSize="17sp"
                                android:textStyle="italic|bold" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personalPics"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/carrierLin"/>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>